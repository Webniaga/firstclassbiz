---

<section class="py-20 bg-gradient-to-r from-dark-blue via-dark-charcoal to-dark-blue relative overflow-hidden">
	<!-- Background Pattern -->
	<div class="absolute inset-0 opacity-10">
		<div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, #FBBF24 2px, transparent 2px), radial-gradient(circle at 75% 75%, #FBBF24 2px, transparent 2px); background-size: 100px 100px;"></div>
	</div>

	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
		<div class="animate-fade-in">
			<h1 class="font-poppins font-bold text-4xl md:text-5xl lg:text-6xl mb-6 text-white leading-tight">
				Ready to Elevate Your 
				<span class="text-gold">Brand's Quality?</span>
			</h1>
			<p class="font-poppins font-semibold text-xl md:text-2xl text-gold mb-8 uppercase tracking-wide">
				GET YOUR PREMIUM BRANDED VISA PREPAID CARD TODAY!
			</p>
			<a 
				href="#contact" 
				class="inline-block bg-gold hover:bg-yellow-500 text-dark-charcoal font-poppins font-bold text-xl px-12 py-6 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-2xl"
			>
				Contact Us Today!
			</a>
		</div>
	</div>

	<!-- Decorative Elements -->
	<div class="absolute top-10 left-10 w-32 h-32 bg-gold/5 rounded-full blur-2xl"></div>
	<div class="absolute bottom-10 right-10 w-48 h-48 bg-gold/10 rounded-full blur-3xl"></div>
</section>
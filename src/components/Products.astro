<section id="products" class="py-20 bg-dark-charcoal">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="font-poppins font-bold text-3xl md:text-4xl lg:text-5xl mb-6 text-gold">
				A Complete Digital Payment Ecosystem
			</h2>
			<p class="font-inter text-xl text-light-gray max-w-3xl mx-auto">
				Everything your business needs to accept payments, manage finances, and build customer loyalty.
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			<!-- Product 1: Branded Visa Cards -->
			<div class="bg-dark-blue rounded-2xl overflow-hidden hover:transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-2xl group">
				<div class="relative w-full h-[400px] flex items-center justify-center">
					<img 
						src="https://img.webniaga.my/firstclassbiz/kadvisa.png" 
						alt="Branded Visa Prepaid Cards"
						class="w-full h-full object-contain max-w-[400px]"
					/>
				</div>
				<div class="p-8">
				<h3 class="font-poppins font-semibold text-2xl text-gold mb-6 group-hover:text-yellow-400 transition-colors">
					Branded Visa Prepaid Cards
				</h3>
				<p class="font-inter text-light-gray leading-relaxed mb-6">
					Elevate your business with a <span class="text-gold font-medium">Premium Edition Visa Prepaid Card</span>, fully customized with your company's branding.
				</p>
				
				<div class="space-y-4 mb-6">
					<div class="flex items-start space-x-3">
						<div class="w-2 h-2 bg-gold rounded-full mt-2 flex-shrink-0"></div>
						<p class="font-inter text-light-gray text-sm">Seamlessly integrates with customer loyalty programs</p>
					</div>
					<div class="flex items-start space-x-3">
						<div class="w-2 h-2 bg-gold rounded-full mt-2 flex-shrink-0"></div>
						<p class="font-inter text-light-gray text-sm">Attracts and retains larger customer base</p>
					</div>
					<div class="flex items-start space-x-3">
						<div class="w-2 h-2 bg-gold rounded-full mt-2 flex-shrink-0"></div>
						<p class="font-inter text-light-gray text-sm">Perfect for memberships, incentives, and brand building</p>
					</div>
				</div>
				
				<div class="flex flex-wrap gap-2">
					<span class="bg-gold/10 text-gold px-3 py-1 rounded-full font-inter text-xs border border-gold/20">Custom Branding</span>
					<span class="bg-gold/10 text-gold px-3 py-1 rounded-full font-inter text-xs border border-gold/20">Loyalty Programs</span>
					<span class="bg-gold/10 text-gold px-3 py-1 rounded-full font-inter text-xs border border-gold/20">Premium Quality</span>
				</div>
				</p>
				</div>
			</div>

			<!-- Product 2: Kash E-Wallet -->
			<div class="bg-dark-blue rounded-2xl overflow-hidden hover:transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-2xl group">
				<div class="relative w-full h-[400px] flex items-center justify-center">
					<img 
						src="https://img.webniaga.my/firstclassbiz/apps.png" 
						alt="Kash E-Wallet mobile app"
						class="w-full h-full object-contain max-w-[400px]"
					/>
				</div>
				<div class="p-8">
				<h3 class="font-poppins font-semibold text-2xl text-gold mb-6 group-hover:text-yellow-400 transition-colors">
					Kash POS App
				</h3>
				<p class="font-inter text-light-gray leading-relaxed mb-6">
					A <span class="text-gold font-medium">modern and flexible payment application</span> designed for effortless ATM card payments.
				</p>
				
				<div class="space-y-4 mb-6">
					<div class="flex items-start space-x-3">
						<div class="w-2 h-2 bg-gold rounded-full mt-2 flex-shrink-0"></div>
						<p class="font-inter text-light-gray text-sm">Core system in First Class Merchant payment suite</p>
					</div>
					<div class="flex items-start space-x-3">
						<div class="w-2 h-2 bg-gold rounded-full mt-2 flex-shrink-0"></div>
						<p class="font-inter text-light-gray text-sm">Works alongside QR payments for comprehensive solutions</p>
					</div>
					<div class="flex items-start space-x-3">
						<div class="w-2 h-2 bg-gold rounded-full mt-2 flex-shrink-0"></div>
						<p class="font-inter text-light-gray text-sm">Secure settlement directly to your bank account</p>
					</div>
				</div>
				
				<div class="flex flex-wrap gap-2">
					<span class="bg-gold/10 text-gold px-3 py-1 rounded-full font-inter text-xs border border-gold/20">ATM Cards</span>
					<span class="bg-gold/10 text-gold px-3 py-1 rounded-full font-inter text-xs border border-gold/20">Secure Settlement</span>
					<span class="bg-gold/10 text-gold px-3 py-1 rounded-full font-inter text-xs border border-gold/20">Direct Deposit</span>
				</div>
				</p>
				</div>
			</div>

			<!-- Product 3: QR Payments -->
			<div class="bg-dark-blue rounded-2xl overflow-hidden hover:transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-2xl group">
				<div class="relative w-full h-[400px] flex items-center justify-center">
					<img 
						src="https://img.webniaga.my/firstclassbiz/qr.png" 
						alt="QR code payment system"
						class="w-full h-full object-contain max-w-[400px]"
					/>
				</div>
				<div class="p-8">
				<h3 class="font-poppins font-semibold text-2xl text-gold mb-6 group-hover:text-yellow-400 transition-colors">
					Merchant QR Payments
				</h3>
				<p class="font-inter text-light-gray leading-relaxed mb-6">

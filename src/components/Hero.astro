---

<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden">
	<!-- Background Image -->
	<div class="absolute inset-0 z-0">
		<img 
			src="https://img.webniaga.my/firstclassbiz/firstclassbiz.jpg" 
			alt="Premium credit cards background"
			class="w-full h-full object-cover opacity-20"
		/>
		<div class="absolute inset-0 bg-gradient-to-r from-dark-charcoal via-dark-charcoal/5 to-dark-blue/5"></div>
	</div>

	<!-- Content -->
	<div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
		<div class="animate-fade-in">
			<h1 class="font-poppins font-bold text-4xl md:text-6xl lg:text-7xl mb-6 leading-tight">
				Empower Your Brand with a 
				<span class="text-gold">Premium Visa</span> 
				Prepaid Card
			</h1>
			<p class="font-inter text-xl md:text-2xl text-light-gray mb-8 max-w-4xl mx-auto leading-relaxed">
				Modern digital payment solutions designed to elevate Malaysian businesses and build customer loyalty.
			</p>
			<a 
				href="#contact" 
				class="inline-block bg-gold hover:bg-yellow-500 text-dark-charcoal font-poppins font-semibold text-lg px-8 py-4 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl"
			>
				Request a Consultation
			</a>
		</div>
	</div>

	<!-- Scroll Indicator -->
	<div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
		<svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
		</svg>
	</div>
</section>
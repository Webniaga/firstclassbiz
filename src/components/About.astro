<section id="about" class="py-20 bg-dark-blue">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
			<!-- Text Content -->
			<div class="animate-slide-up">
				<h2 class="font-poppins font-bold text-3xl md:text-4xl lg:text-5xl mb-6 text-gold">
					Innovating Digital Finance for Local Entrepreneurs
				</h2>
				<p class="font-inter text-lg text-light-gray leading-relaxed mb-8">
					First Class Industries is a Malaysian company focused on innovation in business management and digital finance. We specialize in providing custom-branded Visa Prepaid Card solutions, empowering local entrepreneurs to build a professional image and strengthen customer relationships through a modern, flexible payment network.
				</p>
				<div class="grid grid-cols-2 gap-6">
					<div class="text-center">
						<div class="text-3xl font-poppins font-bold text-gold mb-2">100+</div>
						<div class="text-light-gray font-inter">Businesses Served</div>
					</div>
					<div class="text-center">
						<div class="text-3xl font-poppins font-bold text-gold mb-2">99%</div>
						<div class="text-light-gray font-inter">Customer Satisfaction</div>
					</div>
				</div>
			</div>

			<!-- Visual Element -->
			<div class="relative animate-fade-in">
				<div class="relative z-10">
					<img 
						src="https://img.webniaga.my/firstclassbiz/firstclassbiz1.jpg" 
						alt="Digital payment solutions"
						class="rounded-2xl shadow-2xl"
					/>
				</div>
				<!-- Decorative elements -->
				<div class="absolute -top-4 -right-4 w-72 h-72 bg-gold/10 rounded-full blur-3xl"></div>
				<div class="absolute -bottom-4 -left-4 w-48 h-48 bg-gold/5 rounded-full blur-2xl"></div>
			</div>
		</div>
	</div>
</section>
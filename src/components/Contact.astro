---

<section id="contact" class="py-20 bg-dark-blue">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="font-poppins font-bold text-3xl md:text-4xl lg:text-5xl mb-6 text-gold">
				Contact Us
			</h2>
			<p class="font-inter text-xl text-light-gray max-w-3xl mx-auto">
				Let's discuss how we can help elevate your business with premium payment solutions.
			</p>
		</div>

		<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
			<!-- Contact Information -->
			<div class="space-y-8">
				<h3 class="font-poppins font-semibold text-2xl text-white mb-8">Get in Touch</h3>
				
				<!-- Phone -->
				<div class="flex items-start space-x-4">
					<div class="w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center flex-shrink-0">
						<svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
						</svg>
					</div>
					<div>
						<h4 class="font-poppins font-medium text-white mb-1">Phone</h4>
						<p class="font-inter text-light-gray">+6010-208 2448</p>
					</div>
				</div>

				<!-- Email -->
				<div class="flex items-start space-x-4">
					<div class="w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center flex-shrink-0">
						<svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
						</svg>
					</div>
					<div>
						<h4 class="font-poppins font-medium text-white mb-1">Email</h4>
						<p class="font-inter text-light-gray">firstclassvisa.hq@gmail.com</p>
					</div>
				</div>

				<!-- Address -->
				<div class="flex items-start space-x-4">
					<div class="w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center flex-shrink-0">
						<svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
						</svg>
					</div>
					<div>
						<h4 class="font-poppins font-medium text-white mb-1">Address</h4>
						<p class="font-inter text-light-gray">
							Wisma CN Asia Corporation, Aras 4<br>
							43300 Seri Kembangan, Selangor, Malaysia
						</p>
					</div>
				</div>
			</div>

			<!-- Contact Form -->
			<div class="bg-dark-charcoal rounded-2xl p-8">
				<h3 class="font-poppins font-semibold text-2xl text-white mb-8">Send us a Message</h3>
				<form class="space-y-6" id="contact-form">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<div>
							<label for="fullName" class="block font-inter text-light-gray mb-2">Full Name</label>
							<input 
								type="text" 
								id="fullName" 
								name="fullName"
								required
								class="w-full px-4 py-3 bg-dark-blue border border-gold/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-gold transition-colors"
								placeholder="Your full name"
							/>
						</div>
						<div>
							<label for="companyName" class="block font-inter text-light-gray mb-2">Company Name</label>
							<input 
								type="text" 
								id="companyName" 
								name="companyName"
								required
								class="w-full px-4 py-3 bg-dark-blue border border-gold/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-gold transition-colors"
								placeholder="Your company name"
							/>
						</div>
					</div>

					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<div>
							<label for="email" class="block font-inter text-light-gray mb-2">Email Address</label>
							<input 
								type="email" 
								id="email" 
								name="email"
								required
								class="w-full px-4 py-3 bg-dark-blue border border-gold/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-gold transition-colors"
								placeholder="your@email.com"
							/>
						</div>
						<div>
							<label for="phone" class="block font-inter text-light-gray mb-2">Phone Number</label>
							<input 
								type="tel" 
								id="phone" 
								name="phone"
								required
								class="w-full px-4 py-3 bg-dark-blue border border-gold/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-gold transition-colors"
								placeholder="+60 12-345 6789"
							/>
						</div>
					</div>

					<div>
						<label for="message" class="block font-inter text-light-gray mb-2">Message</label>
						<textarea 
							id="message" 
							name="message"
							rows="4"
							required
							class="w-full px-4 py-3 bg-dark-blue border border-gold/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-gold transition-colors resize-none"
							placeholder="Tell us about your business and how we can help..."
						></textarea>
					</div>

					<button 
						type="submit"
						class="w-full bg-gold hover:bg-yellow-500 text-dark-charcoal font-poppins font-semibold py-4 rounded-lg transition-colors duration-200 transform hover:scale-105"
					>
						Send Inquiry to WhatsApp
					</button>
				</form>
			</div>
		</div>
	</div>
</section>

<script>
	document.getElementById('contact-form').addEventListener('submit', function(e) {
		e.preventDefault();
		
		const formData = new FormData(this);
		const fullName = formData.get('fullName');
		const companyName = formData.get('companyName');
		const email = formData.get('email');
		const phone = formData.get('phone');
		const message = formData.get('message');
		
		const whatsappMessage = `Hello First Class Industries!%0A%0A` +
			`Name: ${fullName}%0A` +
			`Company: ${companyName}%0A` +
			`Email: ${email}%0A` +
			`Phone: ${phone}%0A%0A` +
			`Message: ${message}%0A%0A` +
			`I'm interested in your premium Visa prepaid card solutions.`;
		
		const whatsappURL = `https://wa.me/60102082448?text=${whatsappMessage}`;
		window.open(whatsappURL, '_blank');
	});
</script>
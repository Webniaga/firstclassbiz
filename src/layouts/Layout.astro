<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>First Class Industries - Premium Visa Prepaid Cards & Digital Payment Solutions</title>
		<meta name="description" content="Empower your Malaysian business with custom-branded Visa prepaid cards and digital payment solutions. Modern fintech services for entrepreneurs and SMEs." />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
	</head>
	<body class="bg-dark-charcoal text-white">
		<slot />
		
		<script>
			// Smooth scrolling for navigation links
			document.querySelectorAll('a[href^="#"]').forEach(anchor => {
				anchor.addEventListener('click', function (e) {
					e.preventDefault();
					const target = document.querySelector(this.getAttribute('href'));
					if (target) {
						target.scrollIntoView({
							behavior: 'smooth',
							block: 'start'
						});
					}
				});
			});

			// Navbar background on scroll
			window.addEventListener('scroll', function() {
				const navbar = document.getElementById('navbar');
				if (window.scrollY > 50) {
					navbar.classList.add('bg-dark-charcoal/95', 'backdrop-blur-md');
				} else {
					navbar.classList.remove('bg-dark-charcoal/95', 'backdrop-blur-md');
				}
			});
		</script>
	</body>
</html>